<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:mnv='urn:import:translator.com.client.mainview' 
	xmlns:mb='urn:import:translator.com.client.menubar'
	xmlns:fv='urn:import:translator.com.client.favourite'
	xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<ui:style src="/resources/styles.css" />
		
	<g:HTMLPanel styleName='{style.template}' ui:field="htmlPanel">
		<g:Label text="New Label" visible="false" ui:field="userName" horizontalAlignment="ALIGN_RIGHT"/>
		<mb:MenuBar ui:field="menuBar"/>
		<mnv:MainView ui:field="mainView"/>
		<fv:Favourite ui:field="favourite" visible="false"/>
		
		<g:HTML addStyleNames="{style.bottomText}">Based on <a href="http://lingvopro.abbyyonline.com/" target="_blank">Abbyy</a> and <a href="http://translate.google.com/" target="_blank">Google</a> translation services.</g:HTML>
		<g:HorizontalPanel styleName="{style.bottomLogo}" horizontalAlignment="ALIGN_RIGHT">
			<g:Image ui:field="imageLogo" />
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 